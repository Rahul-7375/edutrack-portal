{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/",
      "dest": "/client/login.html"
    },
    {
      "src": "/login.html",
      "dest": "/client/login.html"
    },
    {
      "src": "/dashboard.html",
      "dest": "/client/dashboard.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/assets/$1"
    },
    {
      "src": "/scripts/(.*)",
      "dest": "/client/scripts/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}
